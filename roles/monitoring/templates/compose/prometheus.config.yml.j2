global:
  scrape_interval: 30s
  evaluation_interval: 30s
  external_labels:
    monitor: "codelab-monitor"

scrape_configs:
  - job_name: prometheus
    metrics_path: /metrics
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: node-exporter
    static_configs:
      - targets: ["monitoring-node-exporter:9100"]

  - job_name: cadvisor
    static_configs:
      - targets: ["monitoring-cadvisor:8080"]