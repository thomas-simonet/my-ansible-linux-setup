[Unit]
Description=Grafana container
Requires=docker.service
After=docker.service

[Service]
Restart=on-failure
ExecStart=/usr/bin/docker compose -f /mnt/docker/grafana/docker-compose.yml up
ExecStop=/usr/bin/docker compose -f /mnt/docker/grafana/docker-compose.yml stop
SyslogIdentifier=grafana

[Install]
WantedBy=default.target