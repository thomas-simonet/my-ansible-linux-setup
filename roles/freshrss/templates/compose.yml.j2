services:
  freshrss:
    image: {{ freshrss_freshrss_docker_image }}
    container_name: freshrss
    restart: unless-stopped
    security_opt:
      - no-new-privileges=true
    environment:
      - PUID=1002
      - PGID=1002
      - TZ={{ timezone }}
    volumes:
      - /mnt/docker/volumes/freshrss:/config
    networks:
      - public
      - diun-watch
    labels:
      # Traefik
      - traefik.enable=true
      - traefik.http.routers.freshrss.rule=Host(`{{ freshrss_fqdn }}`)
      - traefik.http.routers.freshrss.service=freshrss
      - traefik.http.routers.freshrss.entrypoints=https
      - traefik.http.routers.freshrss.tls=true
      - traefik.http.services.freshrss.loadbalancer.server.port=80
      # Diun
      - diun.enable=true

networks:
  public:
    external: true
  diun-watch:
    external: true
