services:
  mealie:
    image: {{ mealie_mealie_docker_image }}
    container_name: mealie
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 1000M
    security_opt:
      - no-new-privileges=true
    environment:
      # Set Backend ENV Variables Here
      - PUID=1001
      - PGID=1001
      - BASE_URL={{ mealie_fqdn }}
      - ALLOW_SIGNUP=false
      - TZ={{ timezone }}
      # Database Settings
      - DB_ENGINE=postgres
      - POSTGRES_USER=mealie
      - POSTGRES_PASSWORD={{ mealie_postgres_password }}
      - POSTGRES_SERVER=postgres
      - POSTGRES_PORT=5432
      - POSTGRES_DB=mealie
    volumes:
      - /mnt/docker/volumes/mealie/mealie/data:/app/data
    networks:
      - cloudflared
      - mealie
      - diun
    labels:
      - traefik.enable=true
      - traefik.http.routers.mealie.rule=Host(`{{ mealie_fqdn }}`)
      - traefik.http.routers.mealie.service=mealie
      - traefik.http.routers.mealie.entrypoints=websecure
      - traefik.http.routers.mealie.tls=true
      - traefik.http.routers.mealie.tls.certresolver=cloudflareResolver
      - traefik.http.services.mealie.loadbalancer.server.port=9000
      - diun.enable=true

  postgres:
    image: {{ mealie_postgres_docker_image }}
    container_name: mealie-postgres
    restart: unless-stopped
    security_opt:
      - no-new-privileges=true
    environment:
      - POSTGRES_USER=mealie
      - POSTGRES_PASSWORD={{ mealie_postgres_password }}
      - PGUSER=mealie
      - POSTGRES_DB=mealie
    volumes:
      - /mnt/docker/volumes/mealie/postgres/data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD", "pg_isready"]
      interval: 10s
      timeout: 5s
      retries: 3
    networks:
      - mealie

networks:
  cloudflared:
    external: true
  mealie:
    external: true
  diun:
    external: true
