services:
  mealie:
    image: {{ mealie_mealie_docker_image }}
    container_name: mealie
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 1000M
    security_opt:
      - no-new-privileges=true
    environment:
      # Set Backend ENV Variables Here
      - PUID=1002
      - PGID=1002
      - BASE_URL={{ mealie_fqdn }}
      - ALLOW_SIGNUP=false
      - API_DOCS=false
      - TZ={{ timezone }}
      - MAX_WORKERS=1
      - WEB_CONCURRENCY=1
      # Database Settings
      - DB_ENGINE=postgres
      - POSTGRES_USER={{ mealie_postgres_user }}
      - POSTGRES_PASSWORD={{ mealie_postgres_password }}
      - POSTGRES_SERVER=postgres
      - POSTGRES_DB=mealie
      # SMTP Settings
      - SMTP_HOST={{ smtp_host }}
      - SMTP_USER={{ smtp_user }}
      - SMTP_PASSWORD={{ smtp_password }}
      - SMTP_FROM_NAME={{ mealie_smtp_from_name }}
      - SMTP_FROM_EMAIL={{ mealie_smtp_from_address }}
    volumes:
      - /mnt/docker/volumes/mealie/mealie/data:/app/data
    networks:
      - public
      - mealie
      - diun-watch
    labels:
      # Traefik
      - traefik.enable=true
      - traefik.http.routers.mealie.rule=Host(`{{ mealie_fqdn }}`)
      - traefik.http.routers.mealie.service=mealie
      - traefik.http.routers.mealie.entrypoints=https
      - traefik.http.routers.mealie.tls=true
      - traefik.http.services.mealie.loadbalancer.server.port=9000
      # Diun
      - diun.enable=true

  postgres:
    image: {{ mealie_postgres_docker_image }}
    container_name: mealie-postgres
    restart: unless-stopped
    security_opt:
      - no-new-privileges=true
    environment:
      - POSTGRES_USER={{ mealie_postgres_user }}
      - POSTGRES_PASSWORD={{ mealie_postgres_password }}
      - POSTGRES_DB=mealie
      - PGUSER={{ mealie_postgres_user }}
    volumes:
      - /mnt/docker/volumes/mealie/postgres/data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD", "pg_isready"]
      interval: 10s
      timeout: 5s
      retries: 3
    networks:
      - mealie

networks:
  public:
    external: true
  mealie:
    external: true
  diun-watch:
    external: true
